<AuthorizeView>
    <Authorized>
        Hello, @context.User.GetFullName() - @context.User.Identity?.Name!
        <form method="post" action="Account/Logout">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>